pipeline {
    agent {
        kdc {
            compose 'docker-compose.yaml'
        }
    }

    stages {
        stage('Unit tests') {
            steps {
                sh composer install
                phpunit --bootstrap=vendor/autoload.php unit/
            }
        }
        stage('Functional tests') {
            steps {
                sh composer install
                phpunit --bootstrap=vendor/autoload.php functional/
            }
        }
        stage('Spec tests') {
            steps {
                sh composer install
                phpspec --no-interaction run
            }
        }
    }
    post {
        success {
            cap production deploy
        }
        failure {
            cap production rollback
        }
    }
}
