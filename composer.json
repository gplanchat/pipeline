            "Kiboko\\Component\\Phroovy\\": "src/Phroovy",
            "Kiboko\\Component\\JUnitXMLFile\\": "src/JUnitXMLFile"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "functional\\Kiboko\\Component\\Pipeline\\": "functional/Pipeline",
            "functional\\Kiboko\\Component\\Phroovy\\": "functional/Phroovy"
        }
    },
    "bin": ["bin/pipeline"]
}
